<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtContent1"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/txtTitle1"
            android:layout_alignStart="@+id/txtTitle1"
            android:layout_below="@+id/txtTitle1"
            android:layout_marginTop="12dp"
            android:text="1st Content" />

        <TextView
            android:id="@+id/txtContent2"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/txtTitle2"
            android:layout_alignStart="@+id/txtTitle2"
            android:layout_below="@+id/txtTitle2"
            android:layout_marginTop="10dp"
            android:text="2nd Content" />

        <TextView
            android:id="@+id/txtContent3"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/txtTitle3"
            android:layout_alignStart="@+id/txtTitle3"
            android:layout_below="@+id/txtTitle3"
            android:layout_marginTop="12dp"
            android:text="3rd Content" />

        <TextView
            android:id="@+id/txtTitle1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="1st Title"
            android:textStyle="bold"
            android:layout_below="@+id/txtDate"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtContent1"
            android:layout_alignStart="@+id/txtContent1"
            android:layout_below="@+id/txtContent1"
            android:layout_marginTop="11dp"
            android:text="2nd Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtContent2"
            android:layout_alignStart="@+id/txtContent2"
            android:layout_below="@+id/txtContent2"
            android:layout_marginTop="11dp"
            android:text="3rd Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Date"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/txtTitle1"
            android:layout_alignEnd="@+id/txtTitle1"
            android:layout_marginTop="11dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>




